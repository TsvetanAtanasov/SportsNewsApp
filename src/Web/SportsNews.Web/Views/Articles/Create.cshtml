@using SportsNews.Services.Models.Categories
@model SportsNews.Web.Areas.Admin.Models.Articles.CreateArticleInputModel

@{
    ViewData["Title"] = "Create";
    var categories = ViewData["Categories"] as IEnumerable<SelectListItem>;
}

<div class="row">
    <div class="col-full">
        <div class="respond">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <fieldset>
                    <h2>Create Article</h2>
                    <hr />
                    <div class="form-field">
                        <label asp-for="@Model.Title"></label>
                        <input asp-for="@Model.Title" class="full-width" />
                        <span asp-validation-for="@Model.Title" class="text-danger"></span>
                    </div>
                    <div class="form-field">
                        <label asp-for="Content" class="control-label"></label>
                        <textarea asp-for="Content" class="form-control" rows="6" cols="50"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-field">
                        <label asp-for="@Model.CategoryId" class="control-label"></label>
                        <select asp-for="@Model.CategoryId" asp-items="categories" class="form-control"></select>
                        <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Add Article</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>