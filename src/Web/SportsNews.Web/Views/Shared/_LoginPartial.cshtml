@using Microsoft.AspNetCore.Identity
@using SportsNews.Web.Areas.Identity.Data
@inject SignInManager<SportsNewsUser> SignInManager
@inject UserManager<SportsNewsUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>
    </li>
    <li><a>Hello @UserManager.GetUserName(User).Split('@')[0]!</a></li>

}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}