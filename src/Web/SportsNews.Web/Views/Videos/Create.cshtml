@model SportsNews.Web.Models.Videos.CreateVideoInputModel

@{
    ViewData["Title"] = "Create Video";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-full">
        <div class="respond">
            <form asp-controller="Videos" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <fieldset>
                    <h4>Add Video</h4>
                    <hr />
                    <div class="form-field">
                        <label asp-for="@Model.VideoUrl"></label>
                        <input asp-for="@Model.VideoUrl" class="full-width" value="" />
                        <span asp-validation-for="@Model.VideoUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Add Video</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>