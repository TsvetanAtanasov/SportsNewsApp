@model SportsNews.Web.Areas.Admin.Models.Categories.CreateCategoryInputModel

@{
    ViewData["Title"] = "Create Category";
}

<div class="row">
    <div class="col-full">
        <div class="respond">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <fieldset>
                    <h2>Add Category</h2>
                    <hr />
                    <div class="form-field">
                        <label asp-for="@Model.Name"></label>
                        <input asp-for="@Model.Name" class="full-width" value="" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-field">
                        <label asp-for="@Model.Image"></label>
                        <input asp-for="@Model.Image" class="full-width" value="" />
                        <span asp-validation-for="@Model.Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Add Category</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>